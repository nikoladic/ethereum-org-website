/* Responsive Adjustments */
#wrapper
  &:not(.has-sidebar):not(.sidebar-open)
    .sidebar
      display none
  
  // use literal to allow css min() function

  main.page 
    width "min(85vw, %s)" % $contentWidth
    margin 0 auto

#wrapper 
 @media screen and (min-width $breakL)
    &:not(.home)>.content, main.page
      max-width $contentWidth
      margin-left 10em


#wrapper.has-sidebar
  @media screen and (min-width $breakS)
    main.page
      width "calc(100vw - 15vw - %s )" % $sidebarWidth
      max-width 768
      margin-left: min(7.5vw, 10em)

  @media screen and (min-width $breakM)
    main.page
      margin-left: min(7.5vw, 10em)
      margin-right: $sidebarWidth
  @media screen and (min-width $breakL)
    &:not(.home)>.content, .page
      max-width $contentWidth
      margin-left 10em

@media screen and (min-width $breakL)
  .lg-up-hide
    display none !important

@media screen and (min-width $breakM)
  .md-up-hide
    display none !important
    
@media screen and (max-width $breakM)
  .md-hide
    display none !important

  .page
    padding-top 6em

  #wrapper.dark-mode.sidebar-open
    header
      border-bottom 1px dotted $colorPrimaryDark500

    ul
      li
        padding 0
        display block

  .search-box
    margin-right 0.5em

@media screen and (max-width $breakS)

  .sm-hide
    display none !important

  .iframe-container
    iframe
      filter grayscale(0)
      opacity 1

  div.intro-blocks
    .intro-block
      width calc(100vw - 4em)
      padding 0 1.4em

  div.credits
    margin-bottom 2em !important

  div.hero
    margin-top 90px

  div.start-building
    padding 4em 0
    .center
      .terminal-gif,h2, h2.bold,.features .feature
        max-width 100%
      .features .feature
        margin-bottom 4em
      .learn p
        max-width 100%

@media screen and (max-width $breakXs)
  .xs-hide
    display none !important

  .button.announcement
    left 2em
    right 2em
    width calc(100vw - 4em)

@media screen and (max-width $breakXXS)
  body
    font-size 16px

  .content-block
    padding 0 1em

  .button.announcement
    right 1em !important
    left 1em !important
